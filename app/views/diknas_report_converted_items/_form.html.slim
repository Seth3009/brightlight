= form_for @diknas_report_converted_item do |f|
  - if @diknas_report_converted_item.errors.any?
    #error_explanation
      h2 = "#{pluralize(@diknas_report_converted_item.errors.count, "error")} prohibited this diknas_report_converted_item from being saved:"
      ul
        - @diknas_report_converted_item.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :diknas_report_converted
    = f.text_field :diknas_report_converted
  .field
    = f.label :diknas_conversion
    = f.text_field :diknas_conversion
  .field
    = f.label :P_score
    = f.text_field :P_score
  .field
    = f.label :T_score
    = f.text_field :T_score
  .field
    = f.label :comment
    = f.text_area :comment
  .actions = f.submit
