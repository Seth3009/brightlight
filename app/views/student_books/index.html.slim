- if params[:st].present?
  h5 Textbooks Loan for 
  h4 #{@student.name} (#{@grade_section.name})
- else
  h4 Listing Student's Books

ul#grade-options.dropdown-content
  - @grade_levels.each do |grade|
    li 
      = link_to grade.name, "#!", onclick:"filterSectionOptions(#{grade.id}, '#{grade.name}');"
      /= link_to grade.name, "#!", "data-grade-id":"#{grade.id}", "data-grade-name":"#{grade.name}"
ul#section-options.dropdown-content
  - @grade_sections.each do |section|
    li
      = link_to section.name, "#!", class:"grade-#{section.grade_level_id}", onclick:"filterStudentOptions(#{section.id}, '#{section.name}');"
ul#student-options.dropdown-content
  / - if @grade_section.present?
  /   - @grade_section.students.each do |student|
  /     li 
  /       = link_to student.name, student_books_path(s:"#{@grade_section.id}",sid:"#{student.id}"), class:"student-#{@grade_section.grade_level_id}"

javascript:
  function filterSectionOptions(id, name) {
    var grade_ids = #{raw @grade_level_ids};
    $("#grade").html("Grade "+name);
    grade_ids.forEach(function(g){
      if(id!=g) {
        $(".grade-"+g).hide();
      } else {
        $(".grade-"+id).show();
      }
    })
  }
  function filterStudentOptions(id, name) {
    $("#section").html("Section "+name);
    $.getJSON("/students.json?section="+id, null, function (data) {
      console.log("Parsing /students.json?section="+id);
      var list = "";
      $.each(data, function(i,item){
          list += "<li><a href='/student_books?st="+item.id+"'>"+item.name+"</a></li>";
      });
      $("#student-options").html(list);
    });
  }
  
nav
  .nav-wrapper
    ul
      li.right
        a#student-menu.dropdown-button href="#!" data-activates="student-options"
          span#student = params[:sid].present? ? "#{@student.name}" : "Choose student" 
          i.material-icons.right arrow_drop_down
      li.right
        a.dropdown-button href="#!" data-activates="section-options"
          span#section = params[:s].present? ? "Section #{@grade_section.name}" : "Choose section"
          i.material-icons.right arrow_drop_down
      li.right
        a.dropdown-button href="#!" data-activates="grade-options"
          span#grade = params[:s].present? ? "Grade #{@grade_section.grade_level.name}" : "Choose grade" 
          i.material-icons.right arrow_drop_down

.card-panel
  - if params[:sid].present?
    .section-header = @student.name
  table
    thead
      tr
        th Title
        th Barcode
        th Label
        th Issue date
        th Return date
        th Initial condition
        th End condition
        th

    tbody
      - @student_books.each do |student_book|
        tr
          td = student_book.book_copy.book_edition.try(:title).truncate(40)
          /td Title
          td = link_to student_book.barcode, student_book.book_copy
          td = student_book.copy_no
          td = student_book.issue_date
          td = student_book.return_date
          td = student_book.initial_copy_condition_id
          td = student_book.end_copy_condition_id
          td 
            = link_to student_book_path(student_book,st:params[:st])
              i.material-icons.left visibility


.toolbar.z-depth-1
  = will_paginate @employees
