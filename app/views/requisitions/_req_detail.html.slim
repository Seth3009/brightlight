    .input-field.col.m7
      = f.label 'Budget Account', class: 'active'
      = f.select :account_id, options_for_select(@accounts.map { |a| ["#{a.acc_l4}: #{a.description}", a.id] }, @requisition.account_id), prompt: 'Select budget account'
    .input-field.col.offset-m3.m9
      = f.label :budget_notes
      = f.text_field :budget_notes
  