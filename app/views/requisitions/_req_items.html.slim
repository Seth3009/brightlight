.card-panel
  .row
    strong.col.s12.m2 Description
    strong.col.s6.m1 Qty
    strong.col.s6.m1 Unit
    strong.col.s6.m1 Currency
    strong.col.s6.m2 Unit price
    strong.col.s6.m2 Line Total
    strong.col.s6.m2 Date Req'd
    strong.col.s6.m1 Action
  #requisition
    = f.fields_for :req_items do |req_item|
      = render 'req_item_fields', f: req_item
  div
    .row.grey.lighten-2
      .input-field.col.s12.m7
        strong Total
      .input-field.col.s6.m2 style="font-weight:bold; text-align: right"
        span#total = currency(@requisition.total_amt)