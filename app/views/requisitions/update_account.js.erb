<% if @requisition.errors.present? %>
  Materialize.toast("Budget Account could not be updated successfully", 5000, 'red');
<% else %>
  $("tr#po-<%= @order_item.id %>").html("<%=j render(partial: 'purchase_orders/order_row', locals: {item: @order_item})%>");
  $('#show-modal').closeModal();
  Materialize.toast("Budget Account has been updated successfully", 5000, 'green');
<% end %>