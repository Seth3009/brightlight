.row.compact.nested-fields
  .input-field.col.s12.m2
    = f.text_field :description
  .input-field.col.s6.m1
    = f.number_field :qty_reqd
  .input-field.col.s6.m1
    = f.text_field :unit
  .input-field.col.s6.m1
    = f.select :currency, [['IDR', 'IDR'], ['USD', 'USD'], ['SGD', 'SGD'], ['AUD', 'AUD'], ['GBP', 'GBP']]
  .input-field.col.s6.m2
    = f.number_field :est_price
  .input-field.col.s6.m2
    = text_field_tag :line_total, ((f.object.qty_reqd || 0) * (f.object.est_price || 0))
  .input-field.col.s6.m2
    = f.date_field :needed_by_date
  .input-field.col.s6.m1
    = link_to_remove_association f, class: "waves-effect waves-teal red-text"
      i.material-icons.small.tooltipped data-position="bottom" data-delay="50" data-tooltip="Remove item" delete