h4 Grade #{@grade_section.grade_level.name} Section #{@grade_section.name}

- unless @grade_section.academic_year_id == current_academic_year_id
  .toolbar
    h5.right = AcademicYear.find(@grade_section.academic_year_id).name

.list_description
  dl.row
    dd.col.s4
      .label Section
      .item = @grade_section.name
    dd.col.s4
      .label Homeroom teacher
      .item = @grade_section.homeroom.present? ? link_to(@grade_section.homeroom, @grade_section.homeroom) : '--'
    dd.col.s4
      .label Academic Year
      .item = @grade_section.academic_year.present? ? @grade_section.academic_year.name : "--"

.row.tabbed
  .col.s12
    ul.tabs.z-depth-1
      li.tab.col.s3
        a href='#tab1' Students
      li.tab.col.s3
        a href='#tab2' Courses

#tab1
  h5 Students
  table.striped.compact
    thead
      th No
      th Name
    tbody
      - i = 0
      - @grade_section.students.each do |student|
        tr
          td style="width:40px"
            = "#{i += 1}. "
          td
            = link_to student.name, student

#tab2
  h5 Course Sections
  table.striped.compact
    thead
      th No
      th Name
    tbody
      - i = 0
      - @grade_section.course_sections.each do |course|
        tr
          td style="width:40px"
            = "#{i += 1}. "
          td
            = link_to course.name, course

.toolbar.actions
  = link_to 'Back', grade_level_grade_sections_path(@grade_section.grade_level), class: "btn waves-effect waves-teal btn-flat"
  = link_to 'Edit', edit_grade_section_path(@grade_section), class: "btn waves-effect waves-teal"