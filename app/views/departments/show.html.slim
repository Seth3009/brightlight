h4 = @department.name + " (#{@department.code})"
  
nav
  .nav-wrapper
    ul
      li
        = link_to :back
          i.material-icons chevron_left
      li.right
        = link_to edit_department_path(@department)
          | Edit
          i.material-icons.left edit

.card-panel
  .row
    .col.s10
      .list_description
        dl.row
          dd.col.s4
            .label Manager:
            .item = @manager.present? ? link_to(@manager.name, @manager) : "--"
          dd.col.s4
            .label Office Phone:
            .item = @manager.present? ? @manager.office_phone : "--"

.card-panel
  .row
    .col.s10
      .list_description
        - @members.each do |member|
          dl.row
            dd.col.s4
              .label Name:
              .item = link_to member.name, member
            dd.col.s4
              .label Phone:
              .item = member.mobile_phone

  

