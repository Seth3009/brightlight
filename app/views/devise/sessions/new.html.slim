#login-page.row
	.card.z-depth-4.col.s12.margin
		= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login-form'}) do |f|
			.card-content.white
				span.card-title.grey-text Log in
				.row
					.input-field.col.s12
						i.mdi-social-person-outline.prefix
						= f.email_field :email, autofocus: true
					.input-field.col.s12
						i.mdi-action-lock-outline.prefix
						= f.password_field :password, autocomplete: "off"

					- if devise_mapping.rememberable?
						.input-field.col.s12.m12.l12.login-text
							= f.check_box :remember_me
							= f.label :remember_me
				.row
					.input-field.col.s12
						button.btn.waves-effect.waves-light.col.s12 type="submit" Login
			.card-action
				.row.center					
					.col.s12.grey-text
						| OR
					.input-field.col.s12
						= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), class:'btn red waves-effect waves-light col s12'

			.row
				.input-field.col.s4.m4.l4
					= link_to 'Sign up', new_user_registration_path
				.input-field.col.s8.m8.l8
					= link_to 'Forgot your password?', new_user_password_path