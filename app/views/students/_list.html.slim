.card#filterrific_results
  .card-content
    div
      = page_entries_info students 
      = render_filterrific_spinner 

    table.compact.striped
      tr
        th 
        th Name
        th Grade 
        th Family number

      - students.each do |student|
        tr
          td
            /input.checkbox type="checkbox" id="cb-#{student.id}"
            = check_box_tag "add[#{student.id}]"
            = label_tag "add[#{student.id}]", ""
          td = student.name
          td = student.current_grade_section.try(:name)
          td = student.family_no

    = will_paginate students 

  .card-action
    button.btn.waves-effect.waves-light type="submit" Add
    = link_to "Cancel", :back, class: "waves-effect waves-teal btn-flat"

= hidden_field_tag :year, year_id
