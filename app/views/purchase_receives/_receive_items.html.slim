.card-panel
  .horizontal-scroll
    table.compact
      thead
        tr
          th Description
          th.right-align Qty
          th Unit
          -if checking
            th.right-align Accepted
            th.right-align Rejected
          -else
            th.right-align.grey-text Accepted
            th.right-align.grey-text Rejected
          th Location
          th Code
          th Notes
          -if !checking
            th colspan=2 Action
      tbody#deliveries
        -if @receive_items.present?
          = f.fields_for :receive_items, receive_items do |item|
            = render 'receive_item_fields', f: item, checking: checking
        -else
          = f.fields_for :receive_items do |item|
            = render 'receive_item_fields', f: item, checking: checking