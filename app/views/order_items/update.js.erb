<% if @order_item.errors.present? %>
  Materialize.toast("Order item could not be updated successfully", 5000, 'red');
<% else %>
  $("tr#po-<%= @order_item.id %>").html("<%=j render(partial: 'purchase_orders/order_row', locals: {item: @order_item})%>");
  $('#show-modal').closeModal();
  Materialize.toast("Order item has been updated successfully", 5000, 'green');
<% end %>