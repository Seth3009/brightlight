= form_for @diknas_conversion do |f|
  - if @diknas_conversion.errors.any?
    #error_explanation
      h2 = "#{pluralize(@diknas_conversion.errors.count, "error")} prohibited this diknas_conversion from being saved:"
      ul
        - @diknas_conversion.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :course
    = f.collection_select :course_id, Course.all, :id, :name, prompt: true
  .field
    = f.label :diknas_course
    = f.collection_select :diknas_course_id, DiknasCourse.all, :id, :name, prompt: true
  .field
    = f.label :academic_year
    = f.collection_select :academic_year_id, AcademicYear.all, :id, :name, prompt: true
  .field
    = f.label :academic_term
    = f.collection_select :academic_term_id, AcademicTerm.all, :id, :name, prompt: true
  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :notes
    = f.text_area :notes
  .actions = f.submit
