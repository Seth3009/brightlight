= form_for @supplier do |f|
  - if @supplier.errors.any?
    #error_explanation
      h5 = "#{pluralize(@supplier.errors.count, "error")} prohibited this supplier from being saved:"
      ul
        - @supplier.errors.full_messages.each do |message|
          li = message

  .card-panel
    .row
      .input-field.col.s4
        = f.label :company_name
        = f.text_field :company_name
      .input-field.col.s4
        i.material-icons.prefix account_circle
        = f.label :contact_name
        = f.text_field :contact_name
  nav.light
    .nav-wrapper
      .brand-logo style="margin-left: 20px; font-size:1.5em"
        | Contact info
  .card-panel
    table
      tr
        td
          .input-field
            = f.label :address1
            = f.text_field :address1
          .input-field
            = f.label :address2
            = f.text_field :address2
          .input-field
            = f.label :city
            = f.text_field :city
          .input-field
            = f.label :province
            = f.text_field :province
          .input-field
            = f.label :post_code
            = f.text_field :post_code
          .input-field
            = f.label :country
            = f.text_field :country
        td style="vertical-align: top; padding-left: 15px"
          .input-field
            i.material-icons.prefix phone
            = f.label :phone
            = f.text_field :phone
          .input-field
            i.material-icons.prefix phone_iphone
            = f.label :mobile
            = f.text_field :mobile
          .input-field
            i.material-icons.prefix email
            = f.label :email
            = f.text_field :email, type: 'email'
          .input-field
            i.material-icons.prefix website
            = f.label :website
            = f.text_field :website
  nav.light
    .nav-wrapper
      .brand-logo style="margin-left: 20px; font-size:1.5em"
        | Bank Information
  .card-panel
    .row
      .col.s12.m4
        h5 Bank 1
        .input-field
          = f.label :bank
          = f.text_field :bank
        .input-field
          = f.label :bank_branch
          = f.text_field :bank_branch
        .input-field
          = f.label :bank_acct_name
          = f.text_field :bank_acct_name
        .input-field
          = f.label :bank_acct_no
          = f.text_field :bank_acct_no
      .col.s12.m4
        h5 Bank 2
        .input-field
          = f.label :bank2, "Bank 2"
          = f.text_field :bank2
        .input-field
          = f.label :bank2_branch, "Bank 2 Branch"
          = f.text_field :bank2_branch
        .input-field
          = f.label :bank2_acct_name, "Bank 2 Account Name"
          = f.text_field :bank2_acct_name
        .input-field
          = f.label :bank2_acct_no, "Bank 2 Account No"
          = f.text_field :bank2_acct_no
      .input-field.col.s12.m4
        = f.label :payment_method
        = f.text_field :payment_method

  nav.light
    .nav-wrapper
      .brand-logo style="margin-left: 20px; font-size:1.5em"
        | Detail
  .card-panel
    .row
      .input-field.col.s4
        = f.label :category
        = f.text_field :category
      .input-field.col.s4
        = f.label :status
        = f.text_field :status
      .input-field.col.s4
        = f.label :type
        = f.text_field :type
      .input-field.col.s4
        = f.label :group
        = f.text_field :group
      .input-field.col.s12
        = f.label :notes
        = f.text_field :notes


  .toolbar.z-depth-1 
    = link_to 'Cancel', suppliers_path, class: "waves-effect waves-teal btn-flat"
    button.btn.waves-effect.waves-light type="submit" data-disable=true Save
    - if params[:action] =~ /edit/
      = link_to 'Delete', @supplier, data: {confirm: 'Are you sure?'}, method: :delete, class: "right btn waves-effect waves-teal red"