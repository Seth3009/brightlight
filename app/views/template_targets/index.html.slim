.row
  .col.s6
    h4 Template Targets

nav
  .nav-wrapper
    ul.right
     li
       - if can? :manage, Template
          = link_to new_template_target_path
            | New Template Target
            i.material-icons.left add
.card-panel
  table.compact.striped
    thead
      tr
        th Name
        th Code
        th Description
        th

    tbody
      - @template_targets.each do |template_target|
        tr id="row-#{template_target.id}"
          td = template_target.name
          td = template_target.code
          td = template_target.description
          td 
             = link_to template_target
              i.material-icons visibility
             - if can? :update, template_target
              = link_to edit_template_target_path(template_target)
                i.material-icons edit
             - if can? :destroy,template_target
              = remote_link_to_delete template_target, message: "Template target deleted", class: "left waves-effect waves-light red-text"
                i.material-icons delete




